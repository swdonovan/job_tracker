<h1>Categories</h1>
<p><%= link_to "New Category", new_category_path %></p>

<ul>
  <% @categories.each do |category| %>
    <li>
      <h2><%= link_to category.title, category_path(category) %>
      <h6><%= link_to "Edit #{category.title}", edit_category_path(category) %>
          <%= link_to "Delete #{category.title}", category_path(category), method: :delete %></h6>
      </h2>
    </li>
  <% end %>
</ul>
