<%= form_for [@company, @job] do |f| %>
  <%= render partial: "shared/errors", locals: { target: @job } %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :category_id %>
  <%= f.select(:category_id, options_for_select(Category.all.map {|c| [c.title, c.id]}), { :include_blank => "Please select category"}, {:class => "form-control"}) %>

  <%= link_to "Create Category", new_category_path %><br />

  <%= f.submit %>
<% end %>
