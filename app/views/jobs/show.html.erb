Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

City: <%= @job.city %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %><br />

<%= link_to "Delete", company_job_path(@job), method: :delete %>
<%= link_to "Edit", edit_company_job_path(@job) %>

<h3>Comments</h3>
<ul>
  <%= render(partial: 'comments/comment', collection: @job.comments.reverse) %>
</ul>

<%= form_for [@job, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>
